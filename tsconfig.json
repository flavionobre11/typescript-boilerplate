{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],       
    "strict": true,
    "sourceMap": true,                
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}